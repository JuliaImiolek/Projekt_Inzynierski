
@{
    ViewData["Title"] = "MediumShapes";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Coordination challange lvl 4</title>
    <link rel="stylesheet" href="~/css/coordinationChallangeStyles.css">
    <style>
        body {
            background-color: rgba(164, 229, 91, 0.5);
        }
    </style>
</head>
<body>
    <div id="text">
        <h1>Coordination challange</h1>
        <h2>Click as fast as you can in 30 sec :)</h2>
        <h2>Speed level: medium | Shapes size: medium</h2>
        <button class="s" onclick="gameStart()" type="button">Start Game</button>
    </div>
    
    <div>
        <p class="p">Number of clicks: <span id="correct"></span> </p>
        <p class="p">Reaction time: <span id="time">0</span>s</p>
        <p class="p">Time: <span id="stoper"></span> </p>
    </div>
    <div id="box"></div>
    <script src="~/js/CCMediumShapesScript.js"></script>
</body>
</html>